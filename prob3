#include <iostream>
#include <cmath>
#include <conio.h>
using namespace std;

int main()
{
	int x,y;
	double z, V; 
	z = 2.5;
	
	cout << "Please Enter the value of x: "; 
  cin >> x ;
   
    
	cout << "\nPlease Enter the value of y: ";
	cin >> y;

	switch (x)
	{	
		case 1:
		if(y > 1 && y < 5)
		
		{V = x * y * z;
		cout << "V = " << V;}	
		
		else 
		{V = x + (y / z);
		cout << "V = " << V ;}
		break;
		
		case 2:
		if (y <= 5)
		{V = abs((x-y)/z);
			cout << "\n\nV = " << V;}
		
		else 
		{V = x - (sqrt(y+z));
			cout << "\n\nV = " << V ;}
		break;
		
	}

	if(x>2) 
	{V = x+y+z;
		cout << "\nV = " << V ;}
	
_getch ();
return 0;
		
}
